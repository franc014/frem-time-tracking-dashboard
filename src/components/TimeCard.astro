---
export interface Props {
  title: string;
  time: number;
  lastWeekTime: number;
  cardIcon: string;
  itemColor: string;
}

const { title, time, lastWeekTime, cardIcon, itemColor } = Astro.props;
---

<section
  class="item"
  style={`--card-image: url(/${cardIcon});
         --item-color: var(--tt-${itemColor})`}
  aria-label={`${title} Card`}
>
  <div class="item-body">
    <header>
      <h2>{title}</h2>
      <svg
        aria-label="More options icon"
        xmlns="http://www.w3.org/2000/svg"
        fill="none"
        viewBox="0 0 24 24"
        stroke-width="1.5"
        stroke="currentColor"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          d="M6.75 12a.75.75 0 11-1.5 0 .75.75 0 011.5 0zM12.75 12a.75.75 0 11-1.5 0 .75.75 0 011.5 0zM18.75 12a.75.75 0 11-1.5 0 .75.75 0 011.5 0z"
        ></path>
      </svg>
    </header>
    <p>{time}hrs</p>
    <p>Last Week - {lastWeekTime}hrs</p>
  </div>
</section>
<style>
  .item {
    display: flex;
    flex-direction: column;
    color: var(--gray-0);
    font-weight: var(--font-weight-2);
    border-radius: var(--radius-3);
    background-color: lightpink;
  }

  .item-body {
    padding: var(--size-5);
    border-radius: var(--radius-3);
    background-color: hsl(var(--tt-dark-blue));
    /*  margin-top: 20px; */
    position: absolute;
    width: 100%;
    bottom: 0;
    height: 80%;
  }

  .item::before {
    content: "";
    border-radius: var(--radius-3);
    background-color: hsl(var(--item-color));
    position: absolute;
    top: 0;
    width: 100%;
    height: 80%;
    left: 0;
    background-image: var(--card-image);
    background-repeat: no-repeat;
    background-position: top 0 right 10px;
    background-size: 40px;
    padding: 4rem;
  }

  header {
    display: flex;
    margin-bottom: var(--size-2);
  }
  header h2 {
    font-size: var(--font-size-1);
    color: white;
    font-weight: 100;
  }

  p:first-of-type {
    font-size: var(--font-size-5);
    line-height: 1;
    margin-bottom: var(--size-1);
  }
  p:last-of-type {
    font-size: var(--font-size-0);
    color: hsl(var(--tt-pale-blue));
  }

  header svg {
    margin-left: auto;
    width: var(--size-5);
  }
</style>
