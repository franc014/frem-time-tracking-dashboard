---
export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<section aria-labelledby="user-card" class="user">
  <span hidden id="user-card">User Card</span>
  <header class="user-name">
    <div class="user-image">
      <img src="/image-jeremy.png" alt="Jeremy Photo" />
    </div>
    <p>{title}</p>
  </header>
  <nav class="time-navigation" aria-labelledby="time-navigation">
    <span hidden id="time-navigation">Time Navigation</span>
    <ul>
      <li><button>Daily</button></li>
      <li><button aria-current="true">Weekly</button></li>
      <li><button>Monthly</button></li>
    </ul>
  </nav>
</section>
<style>
  .user {
    background-color: hsl(var(--tt-dark-blue));
    color: var(--gray-0);
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    height: 100%;
    border-radius: var(--radius-3);
    font-weight: var(--font-weight-2);
    margin-bottom: 2rem;
  }
  .user-name {
    background-color: hsl(var(--tt-blue));
    padding: var(--size-5) var(--size-5) var(--size-8);
    border-radius: var(--radius-3);
  }
  .user-name p {
    width: min-content;
    font-size: var(--font-size-4);
    letter-spacing: var(--font-letterspacing-3);
    line-height: 1.3;
  }
  .user-name p::before {
    content: "Report for";
    padding-bottom: var(--size-0);
    display: block;
    font-size: var(--font-size-0);
    letter-spacing: var(--font-letterspacing-1);
    font-weight: var(--font-weight-1);
  }

  .time-navigation {
    padding: var(--size-5);
  }

  .user-image {
    width: var(--size-9);
    border-radius: var(--radius-round);
    border: 2px solid var(--gray-0);
    margin-bottom: var(--size-5);
  }
  .user-image img {
    object-fit: auto;
  }

  .time-navigation ul {
    list-style: none;
    padding: 0;
    display: flex;
    justify-content: space-between;
  }

  @media screen and (min-width: 832px) {
    .time-navigation ul {
      flex-direction: column;
    }
  }

  .time-navigation ul li button {
    font-size: var(--font-size-1);
    margin-bottom: var(--size-2);
    color: hsl(var(--tt-desaturated-blue));
    background-color: transparent;
    padding: 0;
  }
  .time-navigation ul li button:hover {
    cursor: pointer;
    color: var(--gray-0);
  }

  ul li button[aria-current="true"] {
    color: white;
  }
</style>
