---
export interface Props {
  title: string;
  time: number;
  lastWeekTime: string;
}

const { title, time, lastWeekTime } = Astro.props;
---

<div class="user">
  <div class="user-name">
    <div class="user-image">
      <img src="/image-jeremy.png" alt="User Image" />
    </div>
    <p>Jeremy Robson</p>
  </div>
  <div class="user-description">
    <ul>
      <li>Daily</li>
      <li>Weekly</li>
      <li>Monthly</li>
    </ul>
  </div>
</div>
<style>
  .user {
    background-color: hsl(var(--tt-dark-blue));
    color: var(--gray-0);
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    height: 100%;
    border-radius: var(--radius-3);
    font-weight: var(--font-weight-2);
  }
  .user-name {
    background-color: hsl(var(--tt-blue));
    padding: var(--size-5) var(--size-5) var(--size-8);
    border-radius: var(--radius-3);
  }
  .user-name p {
    width: min-content;
    font-size: var(--font-size-4);
    letter-spacing: var(--font-letterspacing-3);
    line-height: 1.3;
  }
  .user-name p::before {
    content: "Report for";
    padding-bottom: var(--size-0);
    display: block;
    font-size: var(--font-size-0);
    letter-spacing: var(--font-letterspacing-1);
    font-weight: var(--font-weight-1);
  }
  .user-description {
    padding: var(--size-5);
  }

  .user-image {
    width: var(--size-8);
    border-radius: var(--radius-round);
    border: 2px solid var(--gray-0);
    margin-bottom: var(--size-5);
  }
  .user-image img {
    object-fit: auto;
  }

  .user-description ul {
    list-style-type: none;
    padding: 0;
  }

  .user-description ul li {
    font-size: var(--font-size-0);
    padding-bottom: var(--size-2);
    color: hsl(var(--tt-desaturated-blue));
  }
  .user-description ul li:hover {
    cursor: pointer;
    color: var(--gray-0);
  }
</style>
